{
	"name": "snippet-generator",
	"displayName": "Snippet Generator",
	"description": "Simple snippet generator for VSCode",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.39.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:extension.generateSnippet"
	],
	"main": "./out/src/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "extension.generateSnippet",
				"title": "%cmd.generateSnippet.title%"
			}
		],
		"menus": {
			"editor/context": [
				{
					"command": "extension.generateSnippet",
					"group": "9_cutcopypaste@100"
				}
			]
		},
		"keybindings": {
			"command": "extension.generateSnippet",
			"key": "ctrl+alt+n"
		},
		"configuration": {
			"title": "generateSnippet",
			"properties": {
				"generateSnippet.snippetFilePath": {
					"type": [
						"string",
						"null"
					],
					"default": "default",
					"description": "%cfg.snippetFilePath.description%"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^5.2.6",
		"@types/node": "^10.12.21",
		"@types/vscode": "^1.39.0",
		"glob": "^7.1.4",
		"mocha": "^6.1.4",
		"typescript": "^3.3.1",
		"tslint": "^5.12.1",
		"vscode-test": "^1.2.0"
	}
}